@{
    ViewData["Title"] = "SearchCars";
}
@model List<Cars>
<h1>Search Cars</h1>

<form action="../Car/SearchCars" method="post">
    <input type="text" name="Make" placeholder="Make"/>
    <input type="text" name="Model" placeholder="Model"/>
    <input type="number" name="Year" placeholder="Year"/>
    <input type="text" name="Color" placeholder="Color" min="1900" max="2100"/>

    <input type="submit" value="Search"/>
</form>

@if (Model != null)
{
    <table class="table">
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
            <th>Color</th>
        </tr>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Make</td>
                <td>@car.Model</td>
                <td>@car.Year</td>
                <td>@car.Color</td>
            </tr>
        }
    </table>
}
