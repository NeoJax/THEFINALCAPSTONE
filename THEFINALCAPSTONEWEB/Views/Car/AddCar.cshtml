@{
    ViewData["Title"] = "AddCar";
}
<h1>Add Car</h1>

<form action="../Car/AddCar" method="post">
    <table class="table table-bordered">
        <tr>
            <th>Make: </th>
            <td><input type="text" name="make" required/></td>
        </tr>
        <tr>
            <th>Model: </th>
            <td><input type="text" name="model" required/></td>
        </tr>
        <tr>
            <th>Color: </th>
            <td><input type="text" name="color" required/></td>
        </tr>
        <tr>
            <th>Year: </th>
            <td><input type="number" name="year" min="1900" max="@(DateTime.Now.Year+2)" required/></td>
        </tr>
    </table>
    <input type="submit" value="Submit" required/>
</form>